{% extends 'layouts/base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Top-10 Каналов</h1>
    <div class="row">
        {% for item in topChannels %}
            <div class="col-sm-3">
                <div class="card mb-3">
                    <a href="{{ url('channel_view', {id: item.channel.channelId}) }}">
                        <img src="{{ item.channel.thumbnails.medium.imageUrl }}" class="card-img-top" alt="">
                    </a>
                    <div class="card-body">
                        <a href="{{ url('channel_view', {id: item.channel.channelId}) }}">
                            <h5 class="card-title">#{{ loop.index }}: {{ item.channel.title }}</h5>
                        </a>
                        <div class="card-text">
                            <ul class="list-inline">
                                <li class="list-inline-item" title="Подписчики">
                                    <i class="fas fa-users"></i> {{ (item.channel.statistics.subscriberCount / 1000)|round }}тыс.
                                </li>
                                <li class="list-inline-item" title="Всего просмотров">
                                    <i class="fas fa-eye"></i> {{ (item.channel.statistics.viewCount / 1000)|round }}тыс.
                                </li>
                                <li class="list-inline-item" title="Всего видео">
                                    <i class="fab fa-youtube"></i> {{ item.channel.statistics.videoCount }}
                                </li>
                                <li class="list-inline-item" title="Рейтинг (лайки / дислайки)">
                                    <i class="fas fa-star-half-alt"></i> {{ item.rate|round(2) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}